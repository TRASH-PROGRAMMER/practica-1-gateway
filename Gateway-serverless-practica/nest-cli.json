{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/gateway/src",
  "monorepo": true,
  "root": "apps/gateway",
  "compilerOptions": {
    "webpack": false,
    "tsConfigPath": "apps/gateway/tsconfig.app.json",
    "deleteOutDir": true
  },
  "projects": {
    "gateway": {
      "type": "application",
      "root": "apps/gateway",
      "entryFile": "main",
      "sourceRoot": "apps/gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/gateway/tsconfig.app.json"
      }
    },
    "medico-service": {
      "type": "application",
      "root": "apps/medico-service",
      "entryFile": "main",
      "sourceRoot": "apps/medico-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/medico-service/tsconfig.app.json"
      }
    },
    "receta-service": {
      "type": "application",
      "root": "apps/receta-service",
      "entryFile": "main",
      "sourceRoot": "apps/receta-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/receta-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    }
  }
}
